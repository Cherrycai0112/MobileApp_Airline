<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="zhang.zhixuan.mobileapp_airline.SearchResults">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sr_tv_ori"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sr_tv_dest"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sr_tv_ori"
        android:layout_toEndOf="@+id/sr_tv_ori"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sr_tv_depD"
        android:layout_below="@+id/sr_tv_ori"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sr_tv_retD"
        android:layout_alignTop="@+id/sr_tv_depD"
        android:layout_alignLeft="@+id/sr_tv_dest"
        android:layout_alignStart="@+id/sr_tv_dest" />
</RelativeLayout>
