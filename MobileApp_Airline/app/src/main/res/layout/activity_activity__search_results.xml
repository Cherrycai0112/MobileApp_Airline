<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="zhang.zhixuan.mobileapp_airline.Activity_SearchResults">


    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/main_btn_ChosenDate"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:paddingTop="@dimen/abc_action_bar_content_inset_material"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_dpD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Departure Date" />

        <TextView
            android:id="@+id/tv_rtD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Return Date" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_btn_ChosenTrip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:layout_below="@+id/main_btn_ChosenDate"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_ori"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Origin" />

        <TextView
            android:id="@+id/tv_dest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Destination" />

    </LinearLayout>

    <ListView
        android:layout_below="@id/main_btn_ChosenTrip"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_flightRecord"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
